<% if user_signed_in? %>
  <% unless current_user.voted_for? article %>
	  <%= link_to(like_article_path(article), method: :put, class: "link pointer underline gray")do %>
			<%= article.get_upvotes.size %> <%= "like".pluralize(article.get_upvotes.size) %>
	  <% end %>
	<% else %>
	  Liked <%= article.get_upvotes.size %>
	<% end %>
<% else %>
  <%= link_to(like_article_path(article), method: :put, class: "link pointer underline gray") do %>
	  <%= article.get_upvotes.size %> <%= "like".pluralize(article.get_upvotes.size) %>
	<% end %>
<% end %>