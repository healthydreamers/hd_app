<h1 class="f6 fw5 black mb4">Join a community of passionate human beings aiming for a Healthy, Wealthy & Wise life</h1>
<article class="bg-white pa3 mb3 ba b--light-gray">
  <h4 class="f7 fw6 ttu black pa0">Register</h4>
  <div class="measure db center f5 f4-ns lh-copy">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :first_name, required: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.button :submit, "Register", class: "link pointer white bg-orange pa2 b--none br2 hover-bg-light-red" %>
    <% end %>
  </div>
</article>

<% render "devise/shared/links" %>
<div class="bg-near-white pa3 ba b--light-gray">
  Already have an account? <%= link_to "Login", new_session_path(resource_name), class: "link pointer brand underline pr3" %>
</div>