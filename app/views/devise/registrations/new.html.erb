<h1 class="f4 fw6 black mb4">Join a community of Healthy, Wealthy & Wise passionates</h1>
<h4 class="f3 fw6 ttu black pa0">Register</h4>
<article class="bg-white pa3 mb3 ba b--light-gray">
  <div class="cf measure db center f5 f4-ns lh-copy">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'partials/errors', object: f.object %>
      <div class="fl w-50 pa2">
        <label for="first_name" class="f6 fw6 black">First name </label>
        <span class="f6 fw5 red"><%= f.object.errors[:first_name].first %></span>
        <%= f.input_field :first_name, required: true, autofocus: true, label: false, class: "input-reset ba b--black-20 pa2 db w-100 f5 fw6" %>
      </div>
      <div class="fl w-50 pa2">
        <label for="last_name" class="f6 fw6 black">Last name </label>
        <span class="f6 fw5 red"><%= f.object.errors[:last_name].first %></span>
        <%= f.input_field :last_name, required: true, label: false, class: "input-reset ba b--black-20 pa2 db w-100 f5 fw6" %>
      </div>
      <div class="fl w-100 pa2">
        <label for="email" class="f6 fw6 black">E-mail </label>
        <span class="f6 fw5 red"><%= f.object.email %> <%= f.object.errors[:email].first %></span>
        <%= f.input_field :email, required: true, label: false, class: "input-reset ba b--black-20 pa2 db w-100 f5 fw6" %>
      </div>
      <div class="fl w-100 pa2">
        <label for="password" class="f6 fw6 black">Password </label>
        <span class="f6 fw5 red"><%= f.object.errors[:password].first %></span>
        <%= f.input_field :password, required: true, label: false, class: "input-reset ba b--black-20 pa2 db w-100 f5 fw6" %>
        <small id="name-desc" class="f7 black-40 db">6 characters or more!</small>
      </div>
      <div class="fl w-100 pa2">
        <label for="password_confirmation" class="f6 fw6 black">Password confirmation </label>
        <span class="f6 fw5 red"><%= f.object.errors[:password_confirmation].first %></span>
        <%= f.input_field :password_confirmation, required: true, label: false, class: "input-reset ba b--black-20 pa2 db w-100 f5 fw6" %>
      </div>
      <div class="fl w-100 pa2 mt3">
        <%= f.button :submit, "Register", class: "ph3 pv3 input-reset white bg-orange link pointer f5 fw6 dib b--none br2 hover-bg-light-red" %>
      </div>
      <div class="fl w-100 pa2">
        <%= link_to "Already have an account? Login", new_session_path(resource_name), class: "f6 link dim black" %>
      </div>
    <% end %>
  </div>
</article>

<% render "devise/shared/links" %>