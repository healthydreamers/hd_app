<h1 class="f6 fw5 black mb4">We're a community of passionate human beings aiming for a Healthy, Wealthy & Wise life</h1>
<article class="bg-white pa3 mb3 ba b--light-gray">
  <h4 class="f7 fw6 ttu black pa0">Log in</h4>
 	<div class="measure db center f5 f4-ns lh-copy">
 		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  		<div class="pv1">
  			<%= f.input :email, required: false, autofocus: true %>
  		</div>
  		<div class="pv1">
  			<%= f.input :password, required: false %>
  		</div>
  		<div class="pv1">
  			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			</div>
  		<div class="pv1">
  			<%= f.button :submit, "Log in", class: "link pointer white bg-orange pa2 b--none br2 hover-bg-light-red" %>
  		</div>
		<% end %>
 	</div>
</article>
<% render "devise/shared/links" %>
<div class="bg-near-white pa3 ba b--light-gray">
  <%= link_to "Sign up", new_user_registration_path, class: "link pointer brand underline pr3" %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link pointer brand underline" %>
</div>