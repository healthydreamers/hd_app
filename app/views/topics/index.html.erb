<% @healthy.each do |healthy| %>
  <h4 class="f3 fw6 lh-title black ttu">
    <%= link_to healthy, class: "link pointer dim brand" do %>
      <%= healthy.name %>
      <span class="gray f7 ttl underline">View all</span>
    <% end %>
  </h4>
  <% healthy.articles.last(3).each do |article| %>
    <%= render article %>
  <% end %>
<% end %>
